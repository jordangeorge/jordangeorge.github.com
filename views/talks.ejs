<% include ./partials/header %>


<% if (talks.length > 0) { %>
  <% talks.forEach(function(talk) { %>
    <div class="talk">
      <h1>
        <%= talk["name"] %>
      </h1>
      <h4>
        <%=
        new Date(talk['date']).toLocaleDateString(
        "en-US",
        {year: 'numeric', month: 'long', day: 'numeric'}
        )
        %>
      </h4>
      <p>
        <%= talk["description"] %>
      </p>
    </div>
  <% }); %>
<% } else { %>
  <h1 class="no-talks">No talks to show.</h1>
<% } %>


<% include ./partials/footer %>
